@model Agro360.Models.ViewModels.FarmerReportVM
@{
    Layout = "~/Layouts/User/_Layout.cshtml";
    ViewData["Title"] = "Edit Report";
}


<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card">

            <div class="card-header">
                <span class="h2">Edit Report Details</span>
                <a asp-area="Farmer" asp-controller="Report" asp-action="Index" class="btn btn-success float-right"><i class="fas fa-arrow-left"></i> &nbsp;Back</a>
            </div>

            <div class="card-body">
                <form class="form-horizontal"  method="post" asp-action="UpdateReport">


                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="@Model.CreatedDate"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" disabled asp-for="@Model.CreatedDate">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="@Model.CreatedTime"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" disabled asp-for="@Model.CreatedTime">
                        </div>
                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="@Model.HarvestType"></label>
                        <div class="col-sm-10">
                            <input type="text" disabled class="form-control" asp-for="@Model.HarvestType">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="@Model.Quantity"></label>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control"asp-for="@Model.Quantity">
                                    <div class="input-group-append">
                                        <div class="input-group-text">Kg</div>
                                    </div>
                                </div>
                                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2">Images</label>
                        <div class="col-sm-10 d-flex justify-content-center">


                            <div id="carouselExampleSlidesOnly" class="carousel slide" data-interval="false" data-ride="carousel">
                                <div class="carousel-inner" role="listbox">
                                    @for (int i = 0; i < Model.ImageLinks.Count; i++)
                                    {
                                        if (i == 0)
                                        {

                                            <div class="carousel-item active ">
                                                <img src=@Model.ImageLinks[i] class="img-responsive" style=" height: 400px;">
                                            </div>
                                        }
                                        else
                                        {

                                            <div class="carousel-item ">
                                                <img src=@Model.ImageLinks[i] class="img-responsive" style=" height: 400px;">
                                            </div>
                                        }

                                    }
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                        </div>
                    </div>

                    <div class="form-group row">
                        <input hidden asp-for="@Model.ReportId">
                        <div class="col-sm-4 offset-sm-2">
                            <button type="reset" class="btn btn-secondary mb-2">
                                <i class="fas fa-times"></i>
                                <a asp-area="Farmer" asp-controller="Report" asp-action="Index">Cancel</a>
                            </button>
                            <button id="submit" type="submit" class="btn btn-primary mb-2"><i class="fas fa-save"></i> Update</button>
                        </div>

                    </div>

                </form>


            </div>

        </div>
    </div>
</div>


@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>

    </script>
}