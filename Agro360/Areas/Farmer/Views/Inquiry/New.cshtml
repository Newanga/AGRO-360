@model Agro360.Models.Inquiry
@{
    Layout = "~/Layouts/User/_Layout.cshtml";
    ViewData["Title"] = "";
}


<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <span class="h2">New Inquiry</span>
                <a asp-area="Farmer" asp-controller="Report" asp-action="Index" class="btn btn-success float-right"><i class="fas fa-arrow-left"></i> &nbsp;Back</a>
            </div>
            <div class="card-body">
                <form class="form-horizontal"  method="post" asp-action="NewInquiry">
                    <div class="form-group row" hidden>
                        <label class="col-sm-2" asp-for="@Model.ReportId"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control"  asp-for="@Model.ReportId">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="Message"></label>
                        <div class="col-sm-10 ">
                            <textarea asp-for="Message" class="form-control" rows="20"></textarea>
                        </div>
                       
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-4 offset-sm-2">
                            <button type="reset" class="btn btn-secondary mb-2">
                                <i class="fas fa-times"></i>
                                <a asp-area="Farmer" asp-controller="Report" asp-action="Index">Cancel</a>
                            </button>
                            <button id="submit" type="submit" class="btn btn-primary mb-2"><i class="fas fa-save"></i> Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

