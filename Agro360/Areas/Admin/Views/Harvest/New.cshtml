@model Agro360.Models.Harvest
@{
    Layout = "~/Layouts/User/_Layout.cshtml";
    ViewData["Title"] = "New Keells";
}
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <span class="h2">New Harvest </span>
                <a asp-area="Admin" asp-controller="Harvest" asp-action="Index" class="btn btn-success float-right"><i class="fas fa-arrow-left"></i> &nbsp; Back</a>
            </div>
            <div class="card-body">
                <form accept-charset="utf-8" method="post" asp-action="NewHarvest">    
                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="HarvestType"></label>
                        <div class="col-sm-10">
                            <input asp-for="HarvestType" class="form-control">
                            <span asp-validation-for="HarvestType" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-4 offset-sm-2">
                            <button type="reset" class="btn btn-secondary mb-2">
                                <i class="fas fa-times"></i>
                                <a asp-area="Admin" asp-controller="Harvest" asp-action="Index">Cancel</a>
                            </button>
                            <button type="submit" class="btn btn-primary mb-2"><i class="fas fa-save"></i> Save</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
